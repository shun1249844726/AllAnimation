<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lexinsmart.xushun.allanimation.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/btn_alpha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="透明度"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/button_rotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="旋转动画"
        app:layout_constraintLeft_toRightOf="@+id/btn_alpha"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/button_translate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="位移动画"
        app:layout_constraintLeft_toRightOf="@+id/button_rotate"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/button_scale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="缩放"
        app:layout_constraintTop_toBottomOf="@+id/btn_alpha"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/button_animationset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="21dp"
        android:text="动画集合"
        app:layout_constraintLeft_toRightOf="@+id/button_scale"
        app:layout_constraintTop_toBottomOf="@+id/button_rotate" />



    <Button
        android:id="@+id/button_ObjectAnimator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ObjectAnimator"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/button_scale" />

    <Button
        android:id="@+id/button_propertyvalueholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="button_propertyvalueholder"
        android:textAllCaps="false"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/button_animationset"
        app:layout_constraintLeft_toRightOf="@+id/button_ObjectAnimator"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/button_valueanimator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ValueAnimator"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/button_ObjectAnimator" />

    <Button
        android:id="@+id/button_animatorset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AnimatorSet"
        android:textAllCaps="false"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/button_propertyvalueholder"
        app:layout_constraintLeft_toRightOf="@+id/button_valueanimator"
        android:layout_marginLeft="13dp" />

    <Button
        android:id="@+id/button_xml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xml"
        tools:layout_editor_absoluteX="24dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/button_valueanimator" />

    <Button
        android:id="@+id/button_interpolator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="插值器"
        app:layout_constraintLeft_toRightOf="@+id/button_xml"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/button_animatorset" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
        tools:layout_editor_absoluteX="32dp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/button_xml" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/button_interpolator"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="58dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/anim_vector"
        tools:layout_editor_absoluteX="24dp"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


</android.support.constraint.ConstraintLayout>
